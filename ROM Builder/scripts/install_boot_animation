
if [ ! -d WORKING_* ]
then
  echo "No working folder found!"
  scripts/press_enter
  exit 0
fi

cd WORKING_DIR

if [ ! -d system_mount ]
then
  echo "No system folder found!"
  cd ..
  scripts/press_enter
  exit 0
fi
cd system_mount

if [ ! -d media ]
then
  echo "Error: system/media not found!"
  cd ../..
  scripts/press_enter
  exit 0
fi

 cp ../../install_bootanimation/bootanimation.zip media/

 echo 
 echo "Boot animation from install_bootanimation folder added to the ROM"

cd ../..