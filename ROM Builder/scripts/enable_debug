if [ ! -d WORKING_* ]
then
  echo "No working folder found!"
  scripts/press_enter
  exit 0
fi

cd WORKING_DIR

if [ ! -d system_mount ]
then
  echo "No system folder found!"
  cd ..
  scripts/press_enter
  exit 0
fi
cd system_mount

if [ ! -e build.prop ]
then
  echo "Error: build.prop not found!"
  cd ../..
  scripts/press_enter
  exit 0
fi



if [ "$cat build.prop | grep 'persist.service.adb.enable=1' " != "" ]
  then
sed '/persist.service.adb.enable=1/d' build.prop > tmp
cat tmp > build.prop
rm tmp

fi
echo "persist.service.adb.enable=1" >> build.prop

if [ "$cat build.prop | grep 'persist.service.debuggable=1' " != "" ]
  then
sed '/persist.service.adb.debuggable=1/d' build.prop > tmp
cat tmp > build.prop
rm tmp
fi
echo "persist.service.debuggable=1" >> build.prop

if [ "$cat build.prop | grep 'persist.sys.usb.config=mtp,adb' " != "" ]
  then
sed '/persist.sys.usb.config=mtp,adb/d' build.prop > tmp
cat tmp > build.prop
rm tmp

fi
echo "persist.sys.usb.config=mtp,adb" >> build.prop

cd ../..